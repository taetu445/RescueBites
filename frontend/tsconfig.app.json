{
  "compilerOptions": {
    /* ---------- ECMAScript target ---------- */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* ---------- module & bundler ---------- */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* ---------- React JSX ---------- */
    "jsx": "react-jsx",
    "useDefineForClassFields": true,

    /* ---------- Linting ---------- */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* ---------- Alias & Node types ---------- */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client", "node"]          // ‚Üê makes `import "path"` typesafe
  },

  "include": ["src"]
}
